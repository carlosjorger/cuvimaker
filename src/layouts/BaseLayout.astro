---
import '../styles/global.css';
import Header from '../components/Header.astro';
import '@fontsource/montserrat';
import ViewTransitions from 'astro/components/ViewTransitions.astro';
import TitleLayout from './TitleLayout.astro';

interface Props {
	pageTitle: string;
}
const { pageTitle } = Astro.props;
const pageDescription =
	'An online editor of curriculum vitaes ğŸ§‘â€ğŸ’¼, SEO-friendly made in AstroğŸš€';
const isEditPage = pageTitle.includes('Editor');
---

<!-- TODO: change :image -->
<html lang="en" class="h-full">
	<head>
		<meta charset="utf-8" />
		<meta
			name="keywords"
			content="cuvimaker,Online Cv Maker,Astro,CV,Online,Editor,CV Maker,CSS,JavaScript,Github,Repository,Resume builder"
		/>
		<link rel="icon" type="image/svg+xml" href="/cuvimaker.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<meta name="description" content={pageDescription} />

		<!-- Facebook Meta Tags -->
		<meta property="og:url" content="https://cuvimaker.netlify.app/" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content={pageTitle} />
		<meta property="og:description" content={pageDescription} />
		<meta
			property="og:image"
			content="https://cuvimaker.netlify.app/cuvimakerText.svg"
		/>

		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta property="twitter:domain" content="cuvimaker.netlify.app" />
		<meta property="twitter:url" content="https://cuvimaker.netlify.app/" />
		<meta name="twitter:title" content={pageTitle} />
		<meta name="twitter:description" content={pageDescription} />
		<meta
			name="twitter:image"
			content="https://cuvimaker.netlify.app/cuvimakerText.svg"
		/>

		<title>{pageTitle}</title>
		<ViewTransitions />
	</head>
	<body
		class="min-h-full bg-base-300 font-montserrat text-base-content transition-colors duration-300"
	>
		<Header />
		<main class="max-lg:m-6a m-3 mx-8 max-md:m-3 max-sm:m-2">
			{
				!isEditPage && (
					<div class="mx-auto flex w-11/12 items-center justify-between max-lg:w-5/6 max-lg:justify-center max-lg:text-center max-md:w-full max-md:text-base">
						<slot />
					</div>
				)
			}
			{
				isEditPage && (
					<div class="mx-auto w-4/5 max-lg:w-5/6 max-md:w-full max-md:text-center max-md:text-base">
						<TitleLayout />
						<slot />
					</div>
				)
			}
		</main>
	</body>
</html>
