---
import '../styles/global.css';
import Header from '../components/Header.astro';
import '@fontsource/montserrat';
import ViewTransitions from 'astro/components/ViewTransitions.astro';
import TitleLayout from './TitleLayout.astro';

interface Props {
	pageTitle: string;
}
const { pageTitle } = Astro.props;
const pageDescription =
	'An online editor of curriculum vitaes ğŸ§‘â€ğŸ’¼, SEO-friendly made in AstroğŸš€';
const isEditPage = pageTitle.includes('Editor');
---

<html lang="en" class="h-full">
	<head>
		<meta charset="utf-8" />
		<meta
			name="keywords"
			content="cuvimaker,Online Cv Maker,Astro,CV,Online,Editor,CV Maker,CSS,JavaScript,Github,Repository,Resume builder"
		/>
		<link rel="icon" type="image/svg+xml" href="/cuvimaker.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<meta name="description" content={pageDescription} />

		<!-- Facebook Meta Tags -->
		<meta property="og:url" content="https://cuvimaker.netlify.app/" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content={pageTitle} />
		<meta property="og:description" content={pageDescription} />
		<meta property="og:image" content="/cuvimaker.svg" />

		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta property="twitter:domain" content="cuvimaker.netlify.app" />
		<meta property="twitter:url" content="https://cuvimaker.netlify.app/" />
		<meta name="twitter:title" content={pageTitle} />
		<meta name="twitter:description" content={pageDescription} />
		<meta name="twitter:image" content="/cuvimaker.svg" />

		<title>{pageTitle}</title>
		<ViewTransitions />
	</head>
	<body
		class="h-full bg-base-300 font-montserrat text-base-content transition-colors duration-300 dark:transition-colors dark:duration-500"
	>
		<Header />
		<main class="max-lg:m-6a m-4 max-md:m-3 max-sm:m-2">
			<div>
				{
					!isEditPage && (
						<div class="mx-auto flex w-5/6 items-center justify-between gap-2 max-lg:w-5/6 max-md:w-full max-md:justify-center max-md:text-center max-md:text-base">
							<slot />
						</div>
					)
				}
				{
					isEditPage && (
						<div class="mx-auto w-4/5 max-lg:w-5/6 max-md:w-full max-md:text-center max-md:text-base">
							<TitleLayout />
							<slot />
						</div>
					)
				}
			</div>
		</main>
	</body>
</html>
